<section class="min-vh-100 d-flex align-items-center bg-body-tertiary py-5">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-sm-11 col-md-10 col-lg-8 col-xl-6">
        <div class="card border-0 shadow-lg rounded-4">

          <!-- Cabeçalho simples -->
          <div class="card-header bg-transparent border-0 pt-4">
            <h2 class="h4 mb-0 text-center">Quiz</h2>
          </div>

          <div class="card-body p-4 p-md-5">
            {{#if mensagem}}
            <div class="alert alert-warning mb-4" role="alert">{{mensagem}}</div>
            {{/if}}

            <form action="/quiz" method="POST" class="needs-validation" novalidate>
              <!-- Nome -->
              <div class="form-floating mb-4">
                <input type="text" id="nome" name="nome" class="form-control" placeholder="Seu nome completo" required
                  maxlength="120" autocomplete="name" autofocus>
                <label for="nome">Seu nome</label>
                <div class="invalid-feedback">Informe seu nome para iniciar.</div>
              </div>

              <!-- Disciplinas -->
              <fieldset class="mb-4">
                <legend class="col-form-label fw-semibold mb-3">
                  Selecione as disciplinas que deseja responder:
                </legend>

                <div class="row row-cols-1 row-cols-sm-2 g-3">
                  {{#each disciplinas}}
                  <div class="col">
                    <label class="d-flex align-items-center gap-3 border rounded-3 p-3">
                      <input class="form-check-input m-0" type="checkbox" name="disciplinas" id="disciplina-{{@index}}"
                        value="{{this}}">
                      <span class="fw-semibold text-truncate">{{this}}</span>
                    </label>
                  </div>
                  {{/each}}
                </div>
              </fieldset>

              <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-lg fw-bold shadow-sm">
                  Iniciar Quiz
                </button>
              </div>
            </form>
          </div>

          <!-- Rodapé com ação secundária -->
          <div class="card-footer bg-transparent border-0 pb-4">
            <div class="d-flex justify-content-end gap-2">
              <a href="/adicionar" class="btn btn-outline-secondary fw-semibold">
                + Adicionar Questões
              </a>
              <a href="/placar" class="btn btn-outline-secondary fw-semibold">
                Placar
              </a>
              <a href="#" class="btn btn-warning fw-semibold" data-bs-toggle="modal"
                data-bs-target="#modalLimparPlacar">
                Limpar Placar
              </a>

              <form id="formLimparPlacar" action="/limpar-placar" method="POST" style="display:none;"></form>
            </div>
          </div>




        </div>
      </div>
    </div>


    <!-- Modal de confirmação -->
    <div class="modal fade" id="modalLimparPlacar" tabindex="-1" aria-labelledby="modalLimparPlacarLabel"
      aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-4 shadow">
          <div class="modal-header bg-warning text-dark rounded-top-4">
            <h5 class="modal-title fw-bold" id="modalLimparPlacarLabel">Confirmar Limpeza</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
          </div>
          <div class="modal-body">
            Tem certeza que deseja <strong>limpar todo o placar</strong>?<br>
            Esta ação não pode ser desfeita.
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancelar</button>
            <form id="formLimparPlacar" action="/limpar-placar" method="POST" class="d-inline">
              <button type="submit" class="btn btn-warning fw-bold">Sim, limpar</button>
            </form>
          </div>
        </div>
      </div>
    </div>

  </div>
</section>

<script>
  // Validação Bootstrap + checagem de espaços em branco
  document.addEventListener('DOMContentLoaded', function () {
    const form = document.querySelector('form.needs-validation');
    const nome = document.getElementById('nome');

    // Limpa mensagem custom quando o usuário digita algo válido
    nome.addEventListener('input', () => {
      if (nome.value.trim()) {
        nome.setCustomValidity('');
        nome.classList.remove('is-invalid');
      }
    });

    form.addEventListener('submit', function (e) {
      // Garante que só espaços vazios não passem
      if (!nome.value.trim()) {
        nome.value = ''; // remove espaços extras
        nome.setCustomValidity('Informe seu nome.');
      } else {
        nome.setCustomValidity('');
      }

      if (!form.checkValidity()) {
        e.preventDefault();
        e.stopPropagation();
      }
      form.classList.add('was-validated');
    }, false);
  });
</script>